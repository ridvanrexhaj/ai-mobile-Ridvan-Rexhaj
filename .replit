modules = ["nodejs-22", "python-3.11"]
[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:1.0.0", "github:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expense Tracker App"

[[workflows.workflow]]
name = "Expense Tracker App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "REACT_NATIVE_PACKAGER_HOSTNAME=0.0.0.0 npm run web"
waitForPort = 5000

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "web", "--", "--no-dev"]
run = ["npm", "run", "web"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37437
externalPort = 3000
